[
  {
    "id": "wallet-rule",
    "match": {
      "url": "http://<.*>wallet</?.*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "upstream": {
      "url": "http://localhost:4002"
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "target_audience": ["machines"]
        }
      },
      {
        "handler": "cookie_session"
      },
      {
        "handler": "bearer_token"
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Auth-Details": "{{ . }}",
            "X-Auth-Source": ""
          }
        }
      }
    ]
  },
  {
    "id": "switch-rule",
    "match": {
      "url": "http://<.*>/switch/<.*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "upstream": {
      "url": "http://localhost:4002"
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "target_audience": ["psp"]
        }
      },
      {
        "handler": "oauth2_introspection",
        "config": {
          "target_audience": ["machines"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Auth-Details": "{{ . }}",
            "X-Auth-Source": ""
          }
        }
      }
    ]
  },
  {
    "id": "shared-rule",
    "match": {
      "url": "http://<.*>/shared/<.*>",
      "methods": ["GET", "POST", "PUT", "DELETE", "PATCH"]
    },
    "upstream": {
      "url": "http://localhost:4002"
    },
    "authenticators": [
      {
        "handler": "oauth2_introspection",
        "config": {
          "target_audience": ["machines"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "X-Auth-Details": "{{ . }}",
            "X-Auth-Source": ""
          }
        }
      }
    ]
  }
]